set history=100
set undolevels=50

syntax enable

set backup
set backupdir=$HOME/.vim/backup
set directory=$HOME/.vim/temp
set number
set relativenumber
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab
set smartindent
set nowrap

"Terminal configuration"
set scrolloff=8
set signcolumn=yes
set colorcolumn=120
highlight ColorColumn ctermbg=0*
